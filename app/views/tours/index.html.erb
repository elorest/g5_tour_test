<h1>Listing tours</h1>

<table>
  <tr>
    <th>User</th>
    <th>Preferred date</th>
    <th>Additional questions</th>
    <th>Options</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tours.each do |tour| %>
  <tr>
    <td><%= tour.user_id %></td>
    <td><%= tour.preferred_date %></td>
    <td><%= tour.additional_questions %></td>
    <td><%= tour.options %></td>
    <td><%= tour.rating %></td>
    <td><%= link_to 'Show', tour %></td>
    <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
    <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

